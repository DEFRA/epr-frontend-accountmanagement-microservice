@using FrontendAccountManagement.Web.Extensions
@using FrontendAccountManagement.Web.ViewModels.AccountManagement
@using FrontendAccountManagement.Web.ViewModels.Shared.GovUK
@model ApprovedPersonNameChangeViewModel

@{
    ViewData["Title"] = Localizer["ApprovedPersonNameChangeTitle"];
    var formFieldOrder = new[] { nameof(ApprovedPersonNameChangeViewModel.FirstName), nameof(ApprovedPersonNameChangeViewModel.LastName) };
    var errorsViewModel = new ErrorsViewModel(ViewData.ModelState.ToErrorDictionary(), Localizer, formFieldOrder);
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                @await Html.PartialAsync("Partials/Govuk/_ErrorSummary", errorsViewModel)

                <form asp-controller="AccountManagement" asp-action="PagePath.ApprovedPersonNameChange" method="post">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
                                <label>
                                    @Localizer["ApprovedPersonNameChangeTitle"]
                                </label>
                            </h1>
                        </legend>

                        <div class="govuk-form-group @((errorsViewModel.HasErrorKey(nameof(ApprovedPersonNameChangeViewModel.FirstName))) ? "govuk-form-group--error" : string.Empty)">
                            <p class="govuk-error-message">
                                <span asp-validation-for="FirstName"></span>
                            </p>
                            <label class="govuk-label" for="FirstName">
                                @Localizer["FirstName"]
                            </label>
                            @* maxlength attribute empty so to override the attribute being added by StringLength *@
                            <input class="govuk-input" asp-for="FirstName" type="text" aria-describedby="FirstName" maxlength>
                        </div>

                        <div class="govuk-form-group @((errorsViewModel.HasErrorKey(nameof(ApprovedPersonNameChangeViewModel.LastName))) ? "govuk-form-group--error" : string.Empty)">
                            <p class="govuk-error-message">
                                <span asp-validation-for="LastName"></span>
                            </p>
                            <label class="govuk-label" for="LastName">
                                @Localizer["LastName"]
                            </label>
                            @* maxlength attribute empty so to override the attribute being added by StringLength *@
                            <input class="govuk-input" asp-for="LastName" type="text" aria-describedby="LastName" maxlength>
                        </div>

                    <button class="govuk-button" data-module="govuk-button">
                        @SharedLocalizer["Continue"]
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>